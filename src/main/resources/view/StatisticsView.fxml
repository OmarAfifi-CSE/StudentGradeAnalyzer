<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="500.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.StatisticsController">

    <children>
        <Label text="Grade Statistics" textFill="#3182ce">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <GridPane hgap="20.0" vgap="15.0" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0"
                                   prefWidth="200.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="190.0" minWidth="10.0"
                                   prefWidth="190.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Mean Grade:">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Median Grade:" GridPane.rowIndex="1">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Mode Grade:" GridPane.rowIndex="2">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Highest Grade:" GridPane.rowIndex="3">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Lowest Grade:" GridPane.rowIndex="4">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Standard Deviation:" GridPane.rowIndex="5">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Total Students:" GridPane.rowIndex="6">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Range:" GridPane.rowIndex="7">
                    <font>
                        <Font name="Segoe UI Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="meanLabel" text="0.00" GridPane.columnIndex="1" style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="medianLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="modeLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="highestLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="lowestLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="stdDevLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="5"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="countLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="6"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="rangeLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="7"
                       style="-fx-text-fill: #000000;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" top="20.0"/>
    </padding>
</VBox>